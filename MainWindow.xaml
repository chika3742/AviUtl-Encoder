<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WpfApp2.MainWindow"
        mc:Ignorable="d"
        Title="AviUtl Encoder" Height="480" Width="800" MinWidth="800" Closing="Window_Closing" Icon="Resources/favicon.ico" MinHeight="480">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Menu Margin="0" VerticalAlignment="Top" FontSize="13" Grid.ColumnSpan="2" Background="White">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="設定" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/preference.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)">
                <MenuItem Header="readmeを開く" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <TextBlock Margin="243,17,242,0" TextWrapping="Wrap" Text="AviUtl 自動エンコーダ" VerticalAlignment="Top" FontSize="36" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <Button x:Name="startButton" Content="開始" Margin="260,0,258,30" VerticalAlignment="Bottom" Height="30" FontSize="22" Cursor="Hand" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,68,0,0" TextWrapping="Wrap" Text="1.エンコード対象のフォルダー" VerticalAlignment="Top" FontSize="20" Height="27" Width="215"/>
        <TextBox x:Name="fromFolder" HorizontalAlignment="Right" Margin="0,65,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Height="27" FontSize="14" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,103,0,0" TextWrapping="Wrap" Text="2.エンコードしたファイルの保存場所" VerticalAlignment="Top" FontSize="20" Height="27" Width="269"/>
        <TextBox x:Name="toFolder" HorizontalAlignment="Right" Height="27" Margin="0,97,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontSize="14" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="27" Width="238"><Run Text="3"/><Run Text=".プロファイル番号(一番上=0)"/></TextBlock>
        <TextBox x:Name="profileNumber" HorizontalAlignment="Right" Height="27" Margin="0,129,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontSize="16" PreviewTextInput="profileNumber_PreviewTextInput" Grid.ColumnSpan="2"/>
        <Button x:Name="openFile1" Content="参照" HorizontalAlignment="Right" Margin="0,65,70,0" VerticalAlignment="Top" Width="75" Height="27" FontSize="16" Click="openFile1_Click" Grid.Column="1"/>
        <Button x:Name="openFile2" Content="参照" HorizontalAlignment="Right" Margin="0,97,70,0" VerticalAlignment="Top" Width="75" Height="27" FontSize="16" Click="openFile2_Click" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="27" Width="266"><Run Text="4"/><Run Text=".出力プラグイン番号(一番上=0)"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="45,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="27" Width="218"><Run Text="5"/><Run Text=".対象"/><Run Text="とする"/><Run Text="ファイル拡張子"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="45,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="27" Width="172"><Run Text="6"/><Run Text=".出力ファイル拡張子"/></TextBlock>
        <TextBox x:Name="pluginNumber" HorizontalAlignment="Right" Height="27" Margin="0,161,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontSize="16" PreviewTextInput="profileNumber_PreviewTextInput" Grid.ColumnSpan="2"/>
        <TextBox x:Name="extFind" HorizontalAlignment="Right" Height="27" Margin="0,193,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" FontSize="16" Grid.Column="1"/>
        <TextBox x:Name="extOutput" HorizontalAlignment="Right" Height="27" Margin="0,225,150,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" FontSize="16" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,225,380,0" TextWrapping="Wrap" Text="." VerticalAlignment="Top" FontSize="20" Height="27" Width="4"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,0,0,140" TextWrapping="Wrap" Text="現在の状況：" VerticalAlignment="Bottom" FontSize="18" Height="24" Width="105"/>
        <TextBlock x:Name="progress" HorizontalAlignment="Left" Margin="204,0,0,140" TextWrapping="Wrap" Text="未スタート" VerticalAlignment="Bottom" FontSize="18" Width="200" Height="24"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,193,380,0" TextWrapping="Wrap" Text="." VerticalAlignment="Top" FontSize="20" Height="27" Width="4"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Right" Height="30" Margin="0,0,20,30" VerticalAlignment="Bottom" Width="200" Cursor="Arrow" IsManipulationEnabled="True" Grid.Column="1"/>
        <ScrollViewer HorizontalAlignment="Right" Height="77" Margin="0,0,50,100" VerticalAlignment="Bottom" Width="320" Grid.Column="1">
            <TextBlock x:Name="log" TextWrapping="Wrap" FontSize="14" Text="ログ"/>
        </ScrollViewer>
        <Button x:Name="pauseButton" Content="一時停止" HorizontalAlignment="Left" Margin="110,0,0,30" VerticalAlignment="Bottom" Width="88" Height="30" FontSize="14" Click="pauseButton_Click" IsEnabled="False"/>
        <ProgressBar x:Name="pb1" HorizontalAlignment="Left" Height="15" Margin="45,0,0,80" VerticalAlignment="Bottom" Width="200"/>
        <TextBlock x:Name="progressPercent" HorizontalAlignment="Left" Margin="120,0,0,79" TextWrapping="Wrap" Text="出力の進捗" VerticalAlignment="Bottom" TextAlignment="Center" Width="59"/>

    </Grid>
</Window>
