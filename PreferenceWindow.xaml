<Window x:Class="AUEncoder.PreferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AUEncoder"
        xmlns:WpfApp2="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="設定" Height="180" Width="548" Closing="Window_Closing" ResizeMode="NoResize">
    <Grid Height="157">
        <TextBlock HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="AviUtlのパス" FontSize="14" RenderTransformOrigin="0.464,0.167"/>
        <TextBox x:Name="AviutlPath" HorizontalAlignment="Right" Margin="0,11,89,0" VerticalAlignment="Top" Width="238" PreviewDragOver="ChangeDragOverCursor" Drop="AviutlPath_Drop" IsReadOnly="True"/>
        <Button x:Name="aviutlPathOpen" Content="参照" HorizontalAlignment="Right" Margin="0,11,10,0" VerticalAlignment="Top" Width="74" Click="aviutlPathOpen_Click" Cursor="Hand" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="プロファイルラベルの編集" TextAlignment="Center" FontSize="14"/>
        <ComboBox x:Name="Prof_ComboBox" HorizontalAlignment="Right" Margin="0,36,155,0" VerticalAlignment="Top" Width="172" SelectedIndex="0" SelectionChanged="ProfileComboBox_SelectionChanged" FontSize="11" >
            <ComboBoxItem Content="＜選択してください＞"/>
            <ComboBoxItem Content="新規追加"/>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Number}"/>
                        <TextBlock Text=" : "/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="Prof_Edit" Content="編集" HorizontalAlignment="Right" Margin="0,37,80,0" VerticalAlignment="Top" Width="64" IsEnabled="False" Click="Prof_Edit_Click"/>
        <Button x:Name="Prof_Delete" Content="削除" HorizontalAlignment="Right" Margin="0,37,10,0" VerticalAlignment="Top" Width="64" IsEnabled="False" Click="Prof_Delete_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="プラグインラベルの編集" TextAlignment="Center" FontSize="14"/>
        <ComboBox x:Name="Plug_ComboBox" HorizontalAlignment="Right" Margin="0,64,155,0" VerticalAlignment="Top" Width="172" SelectedIndex="0" SelectionChanged="Plugin_ComboBox_SelectionChanged" FontSize="11" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Number}"/>
                        <TextBlock Text=" : "/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            <ComboBoxItem Content="＜選択してください＞"/>
            <ComboBoxItem Content="新規追加"/>
        </ComboBox>
        <Button x:Name="Plug_Edit" Content="編集" HorizontalAlignment="Right" Margin="0,64,80,0" VerticalAlignment="Top" Width="64" IsEnabled="False" Click="Plug_Edit_Click"/>
        <Button x:Name="Plug_Delete" Content="削除" HorizontalAlignment="Right" Margin="0,64,10,0" VerticalAlignment="Top" Width="64" IsEnabled="False" Click="Plug_Delete_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="167,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="D&amp;D可" Foreground="#FF7A7A7A"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Height="22" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="出力進捗の取得間隔" TextAlignment="Center" FontSize="14"/>
        <ComboBox x:Name="Progress_Interval" HorizontalAlignment="Right" Margin="0,90,155,0" VerticalAlignment="Top" Width="172" SelectedIndex="2" FontSize="11">
            <ComboBoxItem Content="取得しない"/>
            <ComboBoxItem Content="0.7秒"/>
            <ComboBoxItem Content="1秒"/>
            <ComboBoxItem Content="2秒"/>
            <ComboBoxItem Content="5秒"/>
            <ComboBoxItem Content="10秒"/>
        </ComboBox>
        <CheckBox x:Name="Follow_Settings_Checkbox" Content="出力の成功・失敗にかかわらず完了後の動作設定に従う" HorizontalAlignment="Left" Margin="25,116,0,0" VerticalAlignment="Top" Foreground="Black" VerticalContentAlignment="Center" Cursor="Hand"/>

    </Grid>
</Window>
