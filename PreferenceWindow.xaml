<Window x:Class="WpfApp2.PreferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="設定" Height="130" Width="550" MinWidth="550" MinHeight="130" Closing="Window_Closing">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="28" Width="131" Text="AviUtlのパス"/>
        <TextBox x:Name="aviutlPath" HorizontalAlignment="Right" Height="27" Margin="0,11,90,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontSize="16"/>
        <Button x:Name="aviutlPathOpen" Content="参照" HorizontalAlignment="Right" Margin="0,11,10,0" VerticalAlignment="Top" Width="75" Height="27" FontSize="16" Click="aviutlPathOpen_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="26" Width="210" Text="AviUtl Controlのパス"/>
        <TextBox x:Name="aucPath" HorizontalAlignment="Right" Height="26" Margin="0,50,90,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" FontSize="16"/>
        <Button x:Name="aucPathOpen" Content="参照" HorizontalAlignment="Right" Margin="0,50,11,0" VerticalAlignment="Top" Width="74" Height="26" FontSize="16" Click="aucPathOpen_Click"/>

    </Grid>
</Window>
