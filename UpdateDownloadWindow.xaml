<Window x:Class="AUEncoder.UpdateDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AUEncoder"
        mc:Ignorable="d"
        Title="ダウンロード中" Height="200" Width="250" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="アップデートをダウンロード中です。" VerticalAlignment="Top" FontSize="16"/>
        <ProgressBar x:Name="download_progressbar" HorizontalAlignment="Center" Height="25" Margin="0,0,0,48" VerticalAlignment="Bottom" Width="175"/>
        <Button x:Name="cancel_button" Content="キャンセル" HorizontalAlignment="Right" Margin="0,0,18,14" VerticalAlignment="Bottom" Width="75" Click="Cancel_button_Click"/>
        <TextBlock x:Name="downloading_progress_text" HorizontalAlignment="Center" Margin="0,67,0,0" TextWrapping="Wrap" Text="Connecting..." VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
